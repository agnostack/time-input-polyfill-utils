{
	"compilerOptions": {
		"baseUrl": "../node_modules",
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
    "skipLibCheck": true,
		"noImplicitAny": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "module": "esnext"
	},
	"files": [
		"./index.ts"
	],
	"include": [
		"./core/**/*.ts",
		"./common/**/*.ts",
		"./types/**/*.ts",
		"./helpers/**/*.ts"
	],
	"exclude": [
		"**/*.spec.ts",
		"node_modules",
		"cypress/**/*",
		"npm/*"
	]
}
