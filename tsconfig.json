{
	"compilerOptions": {
		"baseUrl": "../node_modules",
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"types": [
			"cypress"
		],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
		"noImplicitAny": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "module": "esnext",
    "outDir": "tmp"
	},
	"include": [
		"**/*.ts",
		"**/*.js"
	],
	"exclude": [
		"./node_modules",
		"./tmp/**/*"
	]
}
