{
	"compilerOptions": {
		"baseUrl": "../node_modules",
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
		"noImplicitAny": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "module": "esnext",
    "outDir": "npm"
	},
	"files": [
		"./index.ts"
	],
	"include": [
		"./core/**/*.ts",
		"./common/**/*.ts",
		"./types/**/*.ts",
		"./helpers/**/*.ts"
	],
	"exclude": [
		"./node_modules",
		"./npm/**/*"
	]
}
